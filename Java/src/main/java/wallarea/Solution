public class Wall {

    // Instance variables
    private double width;
    private double height;

    // No-args constructor that initializes width and height to 0
    public Wall() {
        this.width = 0;
        this.height = 0;
    }

    // Constructor that initializes width and height with provided values
    public Wall(double width, double height) {
        if (width < 0) {
            this.width = 0;  // If width is less than 0, set to 0
        } else {
            this.width = width;
        }
        if (height < 0) {
            this.height = 0;  // If height is less than 0, set to 0
        } else {
            this.height = height;
        }
    }

    // Method to get the width
    public double getWidth() {
        return width;
    }

    // Method to get the height
    public double getHeight() {
        return height;
    }

    // Method to set the width
    public void setWidth(double width) {
        if (width < 0) {
            this.width = 0;  // If width is less than 0, set to 0
        } else {
            this.width = width;
        }
    }

    // Method to set the height
    public void setHeight(double height) {
        if (height < 0) {
            this.height = 0;  // If height is less than 0, set to 0
        } else {
            this.height = height;
        }
    }

    // Method to calculate and return the area of the wall
    public double getArea() {
        return width * height;
    }
}
































public class Wall {

    private double width;
    private double height;

    public Wall() {}

    public Wall(double width, double height) {
        setWidth(width);
        setHeight(height);
    }

    public double getWidth() {
        return width;
    }

    public void setWidth(double width)

        if (width < 0) {
            width = 0;
        }
        this.width = width;
    }

    public double getHeight() {
        return height;
    }

    public void setHeight(double height) {

        if (height < 0) {
            height = 0;
        }
        this.height = height;
    }

    public double getArea() {
        return width * height;
    }
}